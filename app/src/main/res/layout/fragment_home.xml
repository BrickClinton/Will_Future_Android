<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.fragmentHome">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:orientation="vertical">

            <!--Navegación-->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                app:cardElevation="6dp"
                app:cardUseCompatPadding="true"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:backgroundTint="#F4F6F7">

                <HorizontalScrollView
                    android:scrollbars="none"
                    android:layout_width="match_parent"
                    android:padding="8dp"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/btShowModalBottom"
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="8dp"
                            android:layout_below="@+id/btResetFormUserAdd"
                            android:background="@drawable/circle_button"
                            android:backgroundTint="@color/material_on_surface_stroke"
                            android:forceDarkAllowed="true"
                            android:text="Open login"
                            android:textAppearance="@style/Widget.MaterialComponents.TimePicker.Button"
                            android:textColor="@color/white"
                            android:textStyle="bold" />

                        <Button
                            android:id="@+id/btOpen1"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="8dp"
                            android:background="@drawable/circle_button"
                            android:backgroundTint="#000000"
                            android:forceDarkAllowed="true"
                            android:text="Open 1"
                            android:textAppearance="@style/Widget.MaterialComponents.TimePicker.Button"
                            android:textColor="@color/white"
                            android:textStyle="bold" />

                        <Button
                            android:id="@+id/btOpen2"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="8dp"
                            android:background="@drawable/circle_button"
                            android:backgroundTint="#000000"
                            android:forceDarkAllowed="true"
                            android:text="Open 2"
                            android:textAppearance="@style/Widget.MaterialComponents.TimePicker.Button"
                            android:textColor="@color/white"
                            android:textStyle="bold" />

                        <Button
                            android:id="@+id/btQuest"
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="8dp"
                            android:background="@drawable/circle_button"
                            android:backgroundTint="#000000"
                            android:forceDarkAllowed="true"
                            android:text="Best University?"
                            android:textAppearance="@style/Widget.MaterialComponents.TimePicker.Button"
                            android:textColor="@color/white"
                            android:textStyle="bold" />

                    </LinearLayout>

                </HorizontalScrollView>

            </androidx.cardview.widget.CardView>

            <!--Design test-->
