<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.fragmentHome">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:orientation="vertical">

            <!--Oculto-->
            <HorizontalScrollView
                android:scrollbars="none"
                android:layout_width="match_parent"
                android:padding="8dp"
                android:visibility="gone"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btShowModalBottom"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_below="@+id/btResetFormUserAdd"
                        android:background="@drawable/circle_button"
                        android:backgroundTint="@color/material_on_surface_stroke"
                        android:forceDarkAllowed="true"
                        android:text="Open login"
                        android:textAppearance="@style/Widget.MaterialComponents.TimePicker.Button"
                        android:textColor="@color/white"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/btOpen1"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:background="@drawable/circle_button"
                        android:backgroundTint="#000000"
                        android:forceDarkAllowed="true"
                        android:text="Open 1"
                        android:textAppearance="@style/Widget.MaterialComponents.TimePicker.Button"
                        android:textColor="@color/white"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/btOpen2"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:background="@drawable/circle_button"
                        android:backgroundTint="#000000"
                        android:forceDarkAllowed="true"
                        android:text="Open 2"
                        android:textAppearance="@style/Widget.MaterialComponents.TimePicker.Button"
                        android:textColor="@color/white"
                        android:textStyle="bold" />

                </LinearLayout>

            </HorizontalScrollView>

            <!--NavegaciÃ³n-->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                app:cardElevation="6dp"
                app:cardUseCompatPadding="true"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:backgroundTint="#F4F6F7">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Control de avances diarios"
                        android:textColor="#1E678F"
                        android:textSize="28dp"
                        android:textStyle="bold"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!--Design test-->
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:columnCount="2"
                android:rowCount="2">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cvHomeOpenUser"
                    android:layout_width="0dp"
                    android:layout_height="182dp"
                    android:padding="8dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="6dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginLeft="8dp"
                    android:backgroundTint="#A569BD">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:src="@drawable/ic_person"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="6dp"
                            android:text="USUARIOS"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:textSize="22dp"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cvHomeOpenArea"
                    android:layout_width="0dp"
                    android:layout_height="182dp"
                    android:padding="8dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="6dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginLeft="8dp"
                    android:backgroundTint="#388E3C">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:src="@drawable/ic_assigment"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="6dp"
                            android:text="AREAS"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:textSize="22dp"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cvHomeOpenProgress"
                    android:layout_width="0dp"
                    android:layout_height="182dp"
                    android:padding="8dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="6dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginLeft="8dp"
                    android:backgroundTint="#BD8B69">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:src="@drawable/ic_work"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="6dp"
                            android:text="AVANCES"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:textSize="22dp"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cvHomeOpenHistory"
                    android:layout_width="0dp"
                    android:layout_height="182dp"
                    android:padding="8dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="6dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginLeft="8dp"
                    android:backgroundTint="#0097A7">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:src="@drawable/ic_history"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="6dp"
                            android:text="HISTORIAL"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:textSize="22dp"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </GridLayout>

        </LinearLayout>

    </ScrollView>


</RelativeLayout>